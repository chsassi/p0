---
const { title = "Protocol Zero", active = "" } = Astro.props;

const current = String(active || "").toLowerCase();

const pages = [
  { name: "ABOUT", path: "/about", key: "about" },
  { name: "ARTISTS", path: "/artists", key: "artists" },
  { name: "CONTACTS", path: "/contacts", key: "contacts" },
  { name: "RELEASES", path: "/releases", key: "releases" },
  { name: "SHOP", path: "/shop", key: "shop" },
];

const visiblePages = pages.filter((p) => p.key !== current);
const half = Math.ceil(visiblePages.length / 2);
const leftPages = visiblePages.slice(0, half);
const rightPages = visiblePages.slice(half);
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <link rel="preload" as="image" href="/images/logo.svg" />

    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/header.css" />
  </head>

  <body>
    <header class="header">
      <div class="header-left">
        {leftPages.map((page) => (
          <a href={page.path}>{page.name}</a>
        ))}
      </div>

      <div class="header-center">
        <a href="/" class="header-logo">
          <img
            src="/images/logo.svg"
            alt="Protocol Zero logo"
            width="80"
            height="80"
            loading="eager"
            decoding="async"
          />
        </a>
      </div>

      <div class="header-right">
        {rightPages.map((page) => (
          <a href={page.path}>{page.name}</a>
        ))}
      </div>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>