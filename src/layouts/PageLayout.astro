---
import HeaderLayout from "./HeaderLayout.astro";
import FooterLayout from "./FooterLayout.astro";
import BackButton from "../components/ui/BackButton.astro";

interface Props {
  title: string;
  active: string;
  backLink?: string;
  backText?: string;
  stylesheets?: string[];
}

const {
  title,
  active,
  backLink = "/",
  backText = "Back to Home",
  stylesheets = []
} = Astro.props;
---
<HeaderLayout title={`Protocol Zero â€” ${title}`} active={active}>
  {stylesheets.map(href => <link slot="head" rel="stylesheet" href={href} />)}
  <div class="page-container">
    <BackButton href={backLink} text={backText} />
    <slot />
  </div>
</HeaderLayout>
<FooterLayout />
