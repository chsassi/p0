---
const { title = "Protocol Zero", active = "" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#0a0a0a" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <nav class="nav">
      <div class="nav-inner">
        <a class="brand" href="/">
          <span class="dot"></span>
          PROTOCOL ZERO
        </a>
        <button class="menu-btn" onclick="document.querySelector('.mobile').style.display = (document.querySelector('.mobile').style.display==='flex'?'none':'flex')">
          Menu
        </button>
        <div class="navlinks">
          <a href="/" class={active==='home'?'active':''}>Home</a>
          <a href="/artists" class={active==='artists'?'active':''}>Artists</a>
          <a href="/releases" class={active==='releases'?'active':''}>Releases</a>
          <a href="/about" class={active==='about'?'active':''}>About</a>
          <a href="/contact" class={active==='contact'?'active':''}>Contact</a>
        </div>
      </div>
      <div class="mobile">
        <a href="/" class={active==='home'?'active':''}>Home</a>
        <a href="/artists" class={active==='artists'?'active':''}>Artists</a>
        <a href="/releases" class={active==='releases'?'active':''}>Releases</a>
        <a href="/about" class={active==='about'?'active':''}>About</a>
        <a href="/contact" class={active==='contact'?'active':''}>Contact</a>
      </div>
    </nav>

    <slot />
  </body>
</html>

