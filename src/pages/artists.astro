---
import HeaderLayout from "../layouts/HeaderLayout.astro";
import artists from "../data/artists.json";
---

<HeaderLayout title="Protocol Zero â€” Artists" active="artists">
  <link rel="stylesheet" href="/styles/artists.css"/>

  <section class="artists-page">
    <h1>Artists</h1>
    <div class="artists-grid">
      {artists.map((artist) => (
        <a href={`artists/${artist.slug}`} class="artist-card">
          <img src={artist.image} alt={artist.name} loading="lazy" />
          <h2>{artist.name}</h2>
        </a>
      ))}
    </div>
  </section>
</HeaderLayout>