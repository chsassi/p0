---
import PageLayout from "../layouts/PageLayout.astro";
import artists from "../data/artists.json";
---
<PageLayout title="Artists" active="artists" stylesheets={["/styles/artists.css"]}>
  <section class="artists-page">
    <h1>ARTISTS</h1>
    <div class="artists-grid">
      {artists.map(artist => (
        <a href={`/artists/${artist.slug}`} class="artist-card">
          <img src={artist.image} alt={artist.name} loading="lazy" decoding="async" width="360" height="260" />
          <h2>{artist.name}</h2>
        </a>
      ))}
    </div>
  </section>
</PageLayout>
