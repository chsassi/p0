---
/**
 * BackButton Component
 * Navigation back button for detail pages
 */
interface Props {
  href?: string;
  text?: string;
  class?: string;
}

const {
  href = '/',
  text = 'Back to Home',
  class: className
} = Astro.props;
---

<a href={href} class:list={['back-btn', className]} aria-label={text}>
  <img src="/images/icons/arrow_left.svg" alt="" class="back-btn-icon" />
</a>

<style>
  .back-btn {
    position: absolute;
    left: 40px;
    top: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8px;
    transition: all 0.3s ease;
    z-index: 100;
  }

  .back-btn:hover {
    transform: translateX(-5px);
  }

  .back-btn-icon {
    width: 40px;
    height: 40px;
    filter: invert(1) brightness(1);
    transition: filter 0.3s ease, transform 0.3s ease;
  }

  .back-btn:hover .back-btn-icon {
    filter: invert(1) brightness(1) drop-shadow(0 0 10px rgba(87, 214, 255, 0.8));
  }

  @media (max-width: 768px) {
    .back-btn {
      position: fixed;
      left: 16px;
      top: auto;
      bottom: 24px;
    }

    .back-btn-icon {
      width: 32px;
      height: 32px;
    }
  }
</style>
