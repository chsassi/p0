---
/**
 * Section Component
 * Reusable scroll section wrapper
 */
interface Props {
  id?: string;
  class?: string;
  title?: string;
  variant?: 'default' | 'about' | 'contacts';
}

const {
  id,
  class: className,
  title,
  variant = 'default'
} = Astro.props;

const sectionClass = variant === 'about' ? 'about-section' :
                     variant === 'contacts' ? 'contacts-section' :
                     'scroll-section';
---

<section id={id} class:list={[sectionClass, className]}>
  {title && variant === 'about' && (
    <div class="section-header">
      <h1>{title}</h1>
    </div>
  )}
  {title && variant === 'contacts' && (
    <h1>{title}</h1>
  )}
  {title && variant === 'default' && (
    <h1>{title}</h1>
  )}
  <div class="section-content">
    <slot />
  </div>
</section>

<style>
  .scroll-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 80px 24px;
    text-align: center;
  }

  .scroll-section h1 {
    font-size: 2rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--text);
  }

  .section-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .section-content :global(p) {
    margin: 0 auto 16px;
    color: var(--muted);
    line-height: 1.8;
    letter-spacing: 2px;
    text-align: center;
  }

  .section-content :global(a[href^="mailto:"]) {
    color: var(--accent);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .section-content :global(a[href^="mailto:"]:hover) {
    color: var(--text);
  }

  /* About section variant */
  .about-section {
    background: var(--bg);
    min-height: auto;
    padding: 40px 24px;
    margin-top: 100px;
    margin-bottom: 100px;
    flex-direction: column;
    align-items: center;
    display: flex;
  }

  .about-section .section-header {
    width: 100%;
    max-width: 700px;
    padding: 0;
  }

  .about-section .section-header h1 {
    margin: 0 0 24px;
    font-size: 3rem;
    text-align: left;
  }

  .about-section .section-content {
    width: 100%;
    max-width: 700px;
    padding: 0;
  }

  .about-section .section-content :global(p) {
    text-align: left;
  }

  /* Contacts section variant */
  .contacts-section {
    background: var(--bg);
    min-height: auto;
    padding: 40px 24px;
    margin-top: 100px;
    margin-bottom: 100px;
    flex-direction: column;
    align-items: center;
    display: flex;
  }

  .contacts-section h1 {
    width: 100%;
    max-width: 700px;
    margin: 0 0 24px;
    font-size: 3rem;
    text-align: left;
  }

  .contacts-section .section-content {
    width: 100%;
    max-width: 700px;
    padding: 0;
  }

  .contacts-section .section-content :global(p) {
    text-align: left;
  }

  .contacts-section .section-content :global(p:last-child) {
    text-align: center;
  }

  @media (max-width: 768px) {
    .scroll-section {
      padding: 60px 16px;
      min-height: auto;
    }

    .scroll-section h1 {
      margin-bottom: 32px;
    }
  }
</style>
