---
/**
 * Header Component
 * Main site header with navigation
 */
interface Props {
  active?: string;
}

const { active = '' } = Astro.props;
const current = String(active || '').toLowerCase();

const pages = [
  { name: 'ABOUT', path: '/#about', key: 'about' },
  { name: 'ARTISTS', path: '/artists', key: 'artists' },
  { name: 'CONTACTS', path: '/#contacts', key: 'contacts' },
  { name: 'RELEASES', path: '/releases', key: 'releases' },
  { name: 'SHOP', path: '/shop', key: 'shop' },
];
---

<header class="header">
  <!-- Left area (empty for symmetry) -->
  <div class="header-left"></div>

  <!-- Center: Logo only, no dropdown -->
  <a href="/" class="header-logo">
    <img
      src="/images/logo.svg"
      alt="Protocol Zero logo"
      width="80"
      height="80"
      loading="eager"
      decoding="async"
    />
  </a>

  <!-- Right: Hamburger button -->
  <button class="hamburger-btn" aria-label="Open menu" aria-expanded="false">
    <span class="hamburger-lines">
      <span></span>
      <span></span>
      <span></span>
    </span>
  </button>

  <!-- Current page indicator -->
  <div class="header-current-page">
    {current ? (pages.find(p => p.key === current)?.name || '') : 'HOME'}
  </div>
</header>

<!-- Fullscreen menu overlay (outside header) -->
<div class="fullscreen-menu">
  <button class="fullscreen-menu-close" aria-label="Close menu">
    <span class="close-icon"></span>
  </button>
  <div class="fullscreen-menu-logo">
    <img src="/images/logo.svg" alt="Protocol Zero Logo" />
  </div>
  <nav class="fullscreen-menu-nav">
    {pages.map(p => (
      <a href={p.path} class:list={[p.key === current && 'is-active']}>
        {p.name}
      </a>
    ))}
  </nav>
</div>

<style>
  .header {
    width: 100%;
    height: 96px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
    transform: translateY(-100%);
    transition: transform 0.5s ease-in-out;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    grid-template-rows: 1fr auto;
    align-items: center;
    padding: 12px 24px;
    gap: 8px;
  }

  .header.is-visible {
    transform: translateY(0);
  }

  .header-left {
    grid-column: 1;
    grid-row: 1;
    align-self: center;
  }

  .header-logo {
    grid-column: 2;
    grid-row: 1;
    display: block;
    justify-self: center;
    align-self: center;
  }

  .header-logo img {
    height: 64px;
    width: auto;
    display: block;
    filter: drop-shadow(0 0 8px rgba(87, 214, 255, 0.3));
    transition: filter 0.3s ease;
  }

  .header-logo:hover img {
    filter: drop-shadow(0 0 20px rgba(0, 255, 255, 0.8))
            drop-shadow(0 0 30px rgba(0, 255, 255, 0.6));
  }

  .hamburger-btn {
    grid-column: 3;
    grid-row: 1;
    justify-self: end;
    align-self: center;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 8px;
    z-index: 1002;
  }

  .hamburger-lines {
    display: flex;
    flex-direction: column;
    gap: 6px;
    width: 28px;
  }

  .hamburger-lines span {
    display: block;
    height: 2px;
    width: 100%;
    background: var(--text, #fff);
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .hamburger-btn:hover .hamburger-lines span {
    background: var(--accent);
  }

  .header-current-page {
    grid-column: 1 / -1;
    grid-row: 2;
    min-height: 1em;
    color: var(--accent);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    text-align: center;
    padding-bottom: 20px;
  }

  /* Fullscreen menu overlay */
  .fullscreen-menu {
    position: fixed;
    inset: 0;
    background: rgba(10, 10, 10, 0.98);
    backdrop-filter: blur(12px);
    z-index: 1001;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding-top: 100px;
    overflow-y: auto;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .fullscreen-menu.is-open {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  .fullscreen-menu-close {
    position: absolute;
    top: 24px;
    right: 24px;
    background: transparent;
    border: none;
    cursor: pointer;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .close-icon {
    position: relative;
    width: 28px;
    height: 28px;
  }

  .close-icon::before,
  .close-icon::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--text, #fff);
    transition: background 0.3s ease;
  }

  .close-icon::before {
    transform: rotate(45deg);
  }

  .close-icon::after {
    transform: rotate(-45deg);
  }

  .fullscreen-menu-close:hover .close-icon::before,
  .fullscreen-menu-close:hover .close-icon::after {
    background: var(--accent);
  }

  .fullscreen-menu-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 48px;
    cursor: pointer;
  }

  .fullscreen-menu-logo img {
    width: 15vw;
    max-width: 350px;
    min-width: 120px;
    height: auto;
    filter: drop-shadow(0 0 8px rgba(87, 214, 255, 0.3));
    transition: filter 0.3s ease, transform 0.3s ease;
  }

  .fullscreen-menu-logo:hover img {
    filter: drop-shadow(0 0 20px rgba(0, 255, 255, 0.8))
            drop-shadow(0 0 30px rgba(0, 255, 255, 0.6));
    transform: scale(1.02);
  }

  .fullscreen-menu-nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    margin-bottom: 60px;
  }

  .fullscreen-menu-nav a {
    color: var(--text, #fff);
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 500;
    letter-spacing: 2px;
    text-transform: uppercase;
    padding: 12px 24px;
    transition: color 0.25s ease;
  }

  .fullscreen-menu-nav a:hover {
    color: var(--accent);
  }

  .fullscreen-menu-nav a.is-active {
    color: var(--accent);
  }

  @media (max-width: 760px) {
    .header {
      height: 88px;
      padding: 12px 16px;
      gap: 6px;
    }

    .header-logo img {
      height: 56px;
    }

    .fullscreen-menu-logo img {
      max-width: 200px;
    }
  }
</style>
